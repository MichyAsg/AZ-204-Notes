@inherits LayoutComponentBase

<MudThemeProvider Theme="FinanceTracker"/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="display: flex; flex-direction: column; min-height: 100vh;">
    <FinanceTrackerHeader></FinanceTrackerHeader>
    <MudMainContent Style="flex-grow: 1;">
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
    <FinanceTrackerFooter></FinanceTrackerFooter>
</MudLayout>

@code {
    MudTheme FinanceTracker = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = Colors.Blue.Lighten1,
            Secondary = Colors.Red.Accent4,
            AppbarBackground = Colors.Shades.White,
            Background = Colors.Gray.Lighten4,
        },

        PaletteDark = new PaletteDark()
        {

            Primary = Colors.Blue.Darken1,
            Secondary = Colors.Red.Accent1,
            AppbarBackground = Colors.Shades.Black,
            Background = Colors.Gray.Darken4,
        },

        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "260px",
            DrawerWidthRight = "300px"
        }
    };
}
