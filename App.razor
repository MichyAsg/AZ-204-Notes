<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <MudContainer Class="mt-8">
                <MudText Typo="Typo.h3" Color="Color.Error">404 - Page Not Found</MudText>
                <MudText Class="mt-4">Sorry, the page you're looking for doesn't exist.</MudText>
                <MudButton Href="/" Variant="Variant.Filled" Color="Color.Primary" Class="mt-4">
                    Go Home
                </MudButton>
            </MudContainer>
        </LayoutView>
    </NotFound>
</Router>